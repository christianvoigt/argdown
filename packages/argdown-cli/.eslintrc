{
  "ecmaFeatures": {
    "globalReturn": true,
    "jsx": true,
    "modules": true,
    "arrowFunctions": true,
    "blockBindings": true
  },

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "it": true,
    "expect": true,
    "sinon": true
  },

  "parser": "babel-eslint",

  "plugins": [],
  "extends": "eslint:recommended",
  "rules": {
    "no-console": "off",
    "no-debugger": "off"
  }
}
